{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules",
    "src",
    "dist"
  ],
  "delay": "3000",
  "verbose": true,
  "execMap": {
    "": "node",
    "js": "node --harmony"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "server/**/*.js"
  ],
  "env": {
    "NODE_ENV": "development",
    "PORT": "3003"
  },
  "ext": "js json",
  "legacy-watch": false
}
